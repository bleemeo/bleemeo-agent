#!/bin/bash

set -e

cd work
WORKSPACE=`pwd`
COMMIT_HASH=`cat COMMIT_HASH`
VERSION=`cat VERSION`

cp -a "${WORKSPACE}"/bleemeo-agent-${VERSION} "${WORKSPACE}"/bleemeo-agent-${VERSION}-windows

sed -i -e "s/^version=0.1$/version=${VERSION}/" \
       "${WORKSPACE}"/bleemeo-agent-${VERSION}-windows/packaging/windows/installer.cfg

cleanup() {
    # Some files are written by Docker and therefor owned by root. We must
    # remove them as root.
    docker run --rm -v "${WORKSPACE}":/srv/workspace -w /srv/workspace bleemeo/nsisbuilder rm -fr venv_pynsist bleemeo-agent-${VERSION}-windows/
}
trap cleanup EXIT

docker run --rm -v "${WORKSPACE}":/srv/workspace bleemeo/nsisbuilder virtualenv -p /usr/bin/python3 /srv/workspace/venv_pynsist
docker run --rm -v "${WORKSPACE}":/srv/workspace -w /srv/workspace/bleemeo-agent-${VERSION}-windows/ bleemeo/nsisbuilder /srv/workspace/venv_pynsist/bin/pip install .[bleemeo,sentry,web]

# Some package (APScheduler at least) require information from *.dist-info that
# are not included by pynsist. Add them manually.
mkdir "${WORKSPACE}"/bleemeo-agent-${VERSION}-windows/packaging/windows/pynsist_pkgs/
cp -a "${WORKSPACE}"/venv_pynsist/lib/python3.?/site-packages/*-*.dist-info "${WORKSPACE}"/bleemeo-agent-${VERSION}-windows/packaging/windows/pynsist_pkgs/

mkdir "${WORKSPACE}"/telegraf
wget -O "${WORKSPACE}"/telegraf/telegraf.zip https://dl.influxdata.com/telegraf/releases/telegraf-1.10.1_windows_amd64.zip
docker run --rm -v "${WORKSPACE}":/srv/workspace -w /srv/workspace bleemeo/nsisbuilder unzip telegraf/telegraf.zip

docker run --rm -v "${WORKSPACE}":/srv/workspace bleemeo/nsisbuilder /srv/workspace/venv_pynsist/bin/pip install wmi 'pynsist<2.0'
docker run --rm -v "${WORKSPACE}":/srv/workspace -w /srv/workspace bleemeo/nsisbuilder /srv/workspace/venv_pynsist/bin/pynsist bleemeo-agent-${VERSION}-windows/packaging/windows/installer.cfg

mkdir -p "${WORKSPACE}"/result
cp -a bleemeo-agent-${VERSION}-windows/nsis/bleemeo-agent_${VERSION}.exe "${WORKSPACE}"/result
